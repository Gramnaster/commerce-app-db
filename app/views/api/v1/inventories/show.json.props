json.status do
  json.code 200
  json.message "Inventory fetched successfully"
end

json.data do
  json.id @inventory.id
  json.sku @inventory.sku
  json.qty_in_stock @inventory.qty_in_stock

  json.company_site do
    json.id @inventory.company_site.id
    json.title @inventory.company_site.title
    json.site_type @inventory.company_site.site_type
    json.address do
      json.id @inventory.company_site.address.id
      json.unit_no @inventory.company_site.address.unit_no
      json.street_no @inventory.company_site.address.street_no
      json.address_line1 @inventory.company_site.address.address_line1
      json.address_line2 @inventory.company_site.address.address_line2
      json.city @inventory.company_site.address.city
      json.region @inventory.company_site.address.region
      json.zipcode @inventory.company_site.address.zipcode
      json.country @inventory.company_site.address.country.country_name
    end
  end

  json.product do
    json.id @inventory.product.id
    json.title @inventory.product.title
    json.description @inventory.product.description
    json.price @inventory.product.price
    json.product_image_url @inventory.product.product_image_url
    json.product_category do
      json.id @inventory.product.product_category.id
      json.title @inventory.product.product_category.title
    end
    json.producer do
      json.id @inventory.product.producer.id
      json.title @inventory.product.producer.title
    end
  end

  json.created_at @inventory.created_at
  json.updated_at @inventory.updated_at
end
