json.status do
  json.code 200
  json.message "User cart orders fetched successfully"
end

json.pagination @pagination if @pagination

json.data do
  json.array! @user_cart_orders do |order|
    json.id order.id
    json.total_cost order.total_cost
    json.is_paid order.is_paid
    json.cart_status order.cart_status
    json.social_program_id order.social_program_id
    json.user_address do
      json.id order.address.id
      json.address do
        json.unit_no order.address.unit_no
        json.street_no order.address.street_no
        json.barangay order.address.barangay
        json.city order.address.city
        json.region order.address.region
        json.zipcode order.address.zipcode
      end
    end
    json.items_count order.shopping_cart.shopping_cart_items.count
    json.created_at order.created_at
    json.updated_at order.updated_at
  end
end
