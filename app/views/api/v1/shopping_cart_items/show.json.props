json.status do
  json.code 200
  json.message "Shopping cart item fetched successfully"
end

json.data do
  json.id @shopping_cart_item.id
  json.qty @shopping_cart_item.qty
  json.product do
    json.id @shopping_cart_item.product.id
    json.title @shopping_cart_item.product.title
    json.price @shopping_cart_item.product.price
    json.final_price @shopping_cart_item.product.final_price
    json.discount_percentage @shopping_cart_item.product.applicable_discount_percentage
    json.discount_amount_dollars @shopping_cart_item.product.discount_amount_dollars
    json.description @shopping_cart_item.product.description
    json.product_image_url @shopping_cart_item.product.optimized_image_url
  end
  json.subtotal (@shopping_cart_item.product.final_price.to_f * @shopping_cart_item.qty).round(2)
  json.created_at @shopping_cart_item.created_at
  json.updated_at @shopping_cart_item.updated_at
end
