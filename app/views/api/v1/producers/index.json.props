json.status do
  json.code 200
  json.message "Fetched all producers successfully"
end

json.pagination @pagination if @pagination

json.data do
  json.array! @producers do |producer|
    json.id producer.id
    json.title producer.title
    json.products_count producer.products.count

    json.address do
      json.id producer.address.id
      json.unit_no producer.address.unit_no
      json.street_no producer.address.street_no
      json.address_line1 producer.address.address_line1
      json.address_line2 producer.address.address_line2
      json.barangay producer.address.barangay
      json.city producer.address.city
      json.region producer.address.region
      json.zipcode producer.address.zipcode
      json.country_id producer.address.country_id
      json.country producer.address.country.name if producer.address.country
    end

    json.created_at producer.created_at
    json.updated_at producer.updated_at
  end
end
